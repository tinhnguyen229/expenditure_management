<odoo>
    <data noupdate="0">
        <record id="module_category_staff" model="ir.module.category">
            <field name="name">Staff</field>
            <field name="sequence">1</field>
        </record>

        <record id="group_staff_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_staff" />
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
        </record>

        <record id="group_staff_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_staff" />
            <field name="implied_ids" eval="[(4, ref('group_staff_user'))]" />
        </record>

    </data>

    <data noupdate="1">
        <record id="staff_comp_rule" model="ir.rule">
            <field name="name">Staff</field>
            <field name="model_id" ref="model_staff" />
            <!--<field name="domain_force"></field> -->
            <field name="perm_read" eval='True' />
            <field name="perm_write" eval='True' />
            <field name="perm_create" eval='True' />
            <field name="perm_unlink" eval='True' />
        </record>
    </data>
</odoo>